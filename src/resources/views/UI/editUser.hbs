<form action="/newEdit/{{user._id}}" method="POST" class="container mt-4" style="width: 500px; display: none;">
  <!-- Tên người dùng -->
  <div class="mb-3">
    <label for="username" class="form-label">Tên người dùng:</label>
    <input type="text" id="username" name="username" class="form-control" value="{{user.username}}">
  </div>

  <!-- Email -->
  <div class="mb-3">
    <label for="email" class="form-label">Email:</label>
    <input type="email" id="email" name="email" class="form-control" value="{{user.email}}">
  </div>

  <!-- Số điện thoại -->
  <div class="mb-3">
    <label for="telephone" class="form-label">Số điện thoại:</label>
    <input type="text" id="telephone" name="telephone" class="form-control" value="{{user.telephone}}">
  </div>

  <!-- Vai trò -->
  <div class="mb-3">
    <label for="role" class="form-label">Vai trò:</label>
    <select id="role" name="role" class="form-select">
      <option value="admin" {{#if (eq user.role 'admin')}}selected{{/if}}>Admin</option>
      <option value="moderator" {{#if (eq user.role 'moderator')}}selected{{/if}}>Moderator</option>
      <option value="user" {{#if (eq user.role 'user')}}selected{{/if}}>User</option>
    </select>
  </div>

  <!-- Nút Cập Nhật -->
  <button class="btn btn-success w-100" type="submit">Cập nhật</button>
</form>
